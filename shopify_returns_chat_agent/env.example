# Shopify Admin API credentials
SHOPIFY_ADMIN_TOKEN=your_token_here
SHOPIFY_STORE_DOMAIN=your_store.myshopify.com

# OpenAI API key for LLM integration
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4o

# Application settings
LOG_LEVEL=INFO
PORT=8080

# CORS settings - comma-separated list of allowed origins
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Sentry.io Configuration (Add your actual DSN from Sentry dashboard)
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/your-project-id
ENVIRONMENT=production  # Set to 'development' for local testing
SENTRY_RELEASE=v0.1.0  # Optional: Set your app version 